{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "paths": {
      "@components/*": ["conponents/*"],
      "@features/*": ["features/*"],
      "@utils/*": ["utils/*"],
      "@redux/*": ["redux/*"],
      "@pages/*": ["pages/*"]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "components",
    "**/*.spec.ts"
  ],
  "exclude": ["node_modules", "cypress", "**/*.spec.ts"]
}
