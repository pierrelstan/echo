{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node", "jest", "cypress", "@testing-library/jest-dom"],
    "paths": {
      "@/components/*": ["components/*"],
      "@/features/*": ["features/*"],
      "@/utils/*": ["utils/*"],
      "@/redux/*": ["redux/*"],
      "@/pages/*": ["pages/*"]
    },
    "noEmit": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js"],
  "exclude": ["node_modules", "cypress", "./cypress.config.ts"]
}
